
{% macro render_excerpt(res, class=None) %}
{% refer to res.relative_path as post %}
<div id="singleColumn">
<h1 href="{{ content_url(res.url) }}">{{ res.meta.title }}</h1>
<div id="block">
 <div class="left">
  <div class="imgLeft">
   {{ post.img1|markdown|typogrify }}
  </div>
  <div class="imgRight">
   {{ post.img2|markdown|typogrify }}
  </div>
  <div class="imgLeft">
   {{ post.img3|markdown|typogrify }}
  </div>
  <div class="imgRight">
   {{ post.img4|markdown|typogrify }}
  </div>
 </div>
 <div class="right">
  {{ post.excerpt|markdown|typogrify }}
  <br>
  {{ post.link|markdown|typogrify }}
 </div>
</div>
</div>
{% endmacro %}

{% macro render_article(res, class=None) %}
{% refer to res.relative_path as post %}
<div id="singleColumn">
 <div id="block">
  <div class="left">
   <a href={{ media_url('/pdf/research/disk/') }}{{ res.meta.File }}> 
   <img src={{ media_url('images/pdf-icon.png') }} ></a>
  </div>
  <div class="right">

   {% if res.meta.Type == 'Chapter' -%}
    <p> {{ res.meta.Author}}, 
    <b> {{ res.meta.Title }}</b>,
        {{ res.meta.Book }},
        {{ res.meta.Publisher }},
    <b> {{ res.meta.Year }} </b> </p>
   {%- endif %}
   {% if res.meta.Type == 'Journal' -%}
   <p> {{ res.meta.Author }}, 
   <b> {{ res.meta.Title }}</b>,
       {{ res.meta.Journal }}, 
    <b> {{ res.meta.Year }} </b> </p>
   {%- endif %}
  </div>
 </div>
</div>
{% endmacro %}

{% macro render_nav(menu, cls=None) -%}
{% if menu -%}
<nav {{'class='~cls if cls }}>
    <ul>
        {% for item in menu -%}
        {% set active = False -%}
        {% if item.type == 'page' -%}
            {% set active = (resource.url ==
                site.content.resource_from_relative_path(item.url).url) -%}
        {% else -%}
            {% set active = (node ==
                site.content.node_from_relative_path(item.url)) -%}
        {%- endif %}
        {% set classes = ['button', 'white'] -%}
        {% do classes.append('active') if active -%}
        {% do classes.append(item.css_class) if item.css_class -%}
        <li>
            <a title="{{ item.description }}"
                class="{{ classes|join(' ') }}"
                href="{{ content_url(item.url) }}">
                {{ item.name }}
            </a>
        </li>
        {%- endfor %}
    </ul>
</nav>
{%- endif %}
{%- endmacro %}
